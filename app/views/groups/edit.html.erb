
<div class="container">

  <div class="text-center my-5">
    <h1>グループの編集をするよ</h1>
  </div>
  <div class="row my-3">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
      <%= form_with model: @group, local: true do |f| %>
        <div class="form-group">
          <%= f.label :グループ名 %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :紹介文 %>
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :グループ画像 %>
          <%= f.file_field :group_image, class: "form-control-file" , accept: "image/*" %>
        </div>
        <% if @group.group_image.attached? %>
        <div>
          <p><span class="border-bottom">現在のグループ画像</span></p>
          <%= image_tag @group.get_group_image, size: '150x150' %>
        </div>
        <% end %>

        <div class="form-group mt-3">
          <%= f.submit "更新する", class: 'btn btn-info' %>
        </div>
      <% end %>
      <%= link_to "グループを削除する", group_path(@group), method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: "削除してよいでしょうか?" } %>
    </div>
  </div>
</div>

