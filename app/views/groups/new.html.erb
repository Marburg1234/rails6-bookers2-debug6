<div class="container">

  <div class="text-center my-5">
    <h1>グループを新規で作成するよ</h1>
  </div>
  <div class="row my-3">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
      <%= form_with model: @group, local: true do |f| %>
        <div class="form-group">
          <%= f.label :グループ名 %>
          <%= f.text_field :name, placeholder: "20文字以内で入力してください", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :紹介文 %>
          <%= f.text_area :introduction, placeholder: "100文字以内で入力してください", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :グループ画像 %>
          <%= f.file_field :group_image, class: "form-control-file" , accept: "image/*" %>
        </div>

        <div class="form-group">
          <%= f.submit class: 'btn btn-info' %>
        </div>
      <% end %>
    </div>
  </div>
</div>