      <!--投稿されたコメントの表示-->
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>Person</th>
              <th colspan="5">Comment</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% book.book_comments.each do |book_comment| %>
              <tr>


                <td>
                  <%= image_tag book_comment.user.get_profile_image, size: '100x100' %>
                  <br />
                  <%= link_to book_comment.user.name, user_path(book_comment.user) %>
                </td>
                <td colspan="5">
                  <%= book_comment.comment %>
                </td>
                <td>
                  <% if current_user == book_comment.user %>
                    <%= link_to "Destroy", book_book_comment_path(book, book_comment), method: :delete, class: 'btn btn-danger', remote:true, data: {"turbolinks" => false} %>
                  <% end %>
                </td>




              </tr>
            <% end %>
          </tbody>
        </table>