<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <!--フォロー/フォロワー機能を挿入する-->
  <!--フォロー人数の表示-->
  <tr>
    <th>follows</th>
    <th><%= link_to user.followings.count, follows_user_path(user.id) %></th>
  </tr>
  <!--フォロワー人数の表示-->
  <tr>
    <th>followers</th>
    <th><%= link_to user.followers.count, followers_user_path(user.id) %></th>
  </tr>
</table>
  <div>
    <% if current_user != user %>
      <% if user.followed_by?(current_user) %>
        <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: 'btn btn-info' %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(user.id), method: :create, class: 'btn btn-success' %>
      <% end %>
    <% end %>

    <!--チャットルームへのボタン作成-->
    <%= render 'chats/chat_start_btn', user: user %>
  </div>

<div class='row'>
  <% if current_user == user %>
    <% if user.email != "guest@example.com" %>
      <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
    <% end %>
  <% end %>
</div>